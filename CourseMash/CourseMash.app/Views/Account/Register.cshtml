@model CourseMash.app.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>@ViewData["Title"]</h1>
<hr />

<div class="row">
    <div class="col-md-4">
        <form formaction="post" asp-action="Register">
            <div class="form-group">
                <input asp-for="FirstName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.FirstName)" />
                <span asp-validation-for="FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="LastName" class="form-control" placeholder="@Html.DisplayNameFor(m => m.LastName)" />
                <span asp-validation-for="LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Email" class="form-control" placeholder="@Html.DisplayNameFor(m => m.Email)" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="PhoneNumb" class="form-control" placeholder="@Html.DisplayNameFor(m => m.PhoneNumb)" />
                <span asp-validation-for="PhoneNumb" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="Password" placeholder="@Html.DisplayNameFor(m => m.Password)" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input asp-for="ConfirmPassword" placeholder="@Html.DisplayNameFor(m => m.ConfirmPassword)" class="form-control" />
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="form-group">
                <select asp-for="SchoolId" asp-items="Model.SchoolDropDown">
                </select>
                <span asp-validation-for="SchoolId" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label class="form-label">@Html.DisplayNameFor(m => m.IsAdmin) </label>

                <input class="form-check-input" asp-for="IsAdmin"/>
            </div>



            <div class="form-group">
                <input type="submit" value="@ViewData["Title"]" class="btn btn-primary" />
            </div>
        </form>

        <p>Already have an account? Login <a asp-controller="Account" asp-action="Login" class="link-primary">Here!</a></p>
    </div>
</div>
